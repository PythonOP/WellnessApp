<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ExpertVideos">

    <!-- Title at the top -->
    <TextView
        android:id="@+id/nutritionVideosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition Expert Videos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <!-- Scrollable content for videos -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/nutritionVideosTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Repeat the following CardView for each video -->
            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="12dp"
                android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- YouTube Video Player -->
                <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                    android:id="@+id/youtubePlayer1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:videoId="zNHY_W8Ac7Y" />

                <!-- Video Title -->
                <TextView
                    android:id="@+id/videoTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title1"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>

                <!-- Video Description -->
                <TextView
                    android:id="@+id/videoDescription1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- YouTube Video Player -->
                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtubePlayer2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:videoId="ReK-0scwk3E"/>

                    <!-- Video Title -->
                    <TextView
                        android:id="@+id/videoTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title2"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>

                    <!-- Video Description -->
                    <TextView
                        android:id="@+id/videoDescription2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description2"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- YouTube Video Player -->
                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtubePlayer3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:videoId="1RfPd2Wt0_Y"/>

                    <!-- Video Title -->
                    <TextView
                        android:id="@+id/videoTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title3"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>

                    <!-- Video Description -->
                    <TextView
                        android:id="@+id/videoDescription3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description3"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- YouTube Video Player -->
                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtubePlayer4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:videoId="xNQXeQ9KDW0"/>

                    <!-- Video Title -->
                    <TextView
                        android:id="@+id/videoTitle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title4"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>

                    <!-- Video Description -->
                    <TextView
                        android:id="@+id/videoDescription4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description4"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- YouTube Video Player -->
                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtubePlayer5"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:videoId="BPI-FJj8f5o"/>

                    <!-- Video Title -->
                    <TextView
                        android:id="@+id/videoTitle5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title5"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>

                    <!-- Video Description -->
                    <TextView
                        android:id="@+id/videoDescription5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description5"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Similarly, you can add 4 more cards with different video IDs -->
            <!-- Card 2, 3, 4, 5 here -->

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
